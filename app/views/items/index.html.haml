%h1= t('activerecord.models.item.other')
%table
  %thead
    %tr
      %th= t('activerecord.attributes.item.name')
      %th= t('activerecord.attributes.item.kind')
      %th= t('activerecord.attributes.item.price')
      %th{ colspan: "3" }
  %tbody
    - @items.each do |item|
      %tr
        %td= item.name
        %td= item.kind
        %td= item.price
        %td= link_to t('actions.show'), item
        %td= link_to t('actions.edit'), edit_item_path(item)
        %td= link_to t('actions.destroy'), item, method: :delete, data: { confirm: t('questions.assurance') }
%br/
= link_to "#{t('actions.new')} #{t('activerecord.models.item.one')}", new_item_path
