<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to t('actions.show'), user %></td>
        <td><%= link_to t('actions.edit'), edit_user_path(user) %></td>
        <td><%= link_to t('actions.destroy'), user, method: :delete, data: { confirm: t('questions.assurance') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('actions.new' 'activerecord.models.user.one'), new_user_path %>
